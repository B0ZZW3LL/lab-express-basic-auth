<div class="form">

  <h2>Signup</h2>

  <form action="/signup" method="POST">

    <div>
      <label> Username
        <input type="text" name="username" />
      </label>
    </div>

    <div>
      <label> Password
        <input type="password" name="password" placeholder="********" />
      </label>
    </div>
    
    <div>
      <button type="submit">Create account</button>
    </div>

      {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p> 
      {{/if}}

  </form>
</div>